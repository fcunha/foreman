[main]
vardir = /var/lib/puppet
logdir = /var/log/puppet
rundir = /var/run/puppet
ssldir = \$vardir/ssl
pluginsource = puppet://\$server/plugins
environments = <%= @host.environment %>

[puppetd]
factsync = true
report = true
ignoreschedules = true
daemon = false
certname = <%= @host.name %>
environment = <%= @host.environment %>
server = <%= @host.puppetmaster %>
